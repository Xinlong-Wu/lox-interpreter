// RUN: %parser %s | FileCheck %s

{
  var foo = "closure";
  fun f() {
    {
      print foo; // expect: closure
      var foo = "shadow";
      print foo; // expect: shadow
    }
    print foo; // expect: closure
  }

  // CHECK:       closure
  // CHECK:       shadow
  // CHECK:       closure
  f();
}
