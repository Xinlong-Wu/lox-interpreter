// RUN: %parser %s | FileCheck %s

var f;
var g;

{
  var local = "local";
  fun f_() {
    print local;
    local = "after f";
    print local;
  }
  f = f_;

  fun g_() {
    print local;
    local = "after g";
    print local;
  }
  g = g_;
}

// CHECK:       local
// CHECK:       after f
f();

// CHECK:       after f
// CHECK:       after g
g();
